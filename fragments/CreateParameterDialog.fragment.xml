
<c:FragmentDefinition
	xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:c="sap.ui.core">

<Dialog title="{i18n>lbl_createParam}" type="Message" contentWidth="25%" class="sapUiContentPadding">

		<l:Grid hSpacing="0" vSpacing="0.5" position="Center">
		
			<Label text="{i18n>lbl_Channel}" design="Bold" class="sapUiTinyMarginTop" required="true">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Label>
			<Input width="100%" value="{dealMemoModel>/createParams/Chnlnm}" showValueHelp="true" valueHelpRequest="onValueHelpChannel">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Input>
			
			<Label text="{i18n>lbl_ChannelCategory}" design="Bold" class="sapUiTinyMarginTop" required="true">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Label>
			<Input width="100%" value="{dealMemoModel>/createParams/Contcat}" showValueHelp="true" valueHelpRequest="onValueHelpContentCategory">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Input>
			
			<Label text="{i18n>lbl_contType}" design="Bold" class="sapUiTinyMarginTop" required="true">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Label>
			<Input width="100%" value="{dealMemoModel>/createParams/Conttyp}" showValueHelp="true" valueHelpRequest="onValueHelpContentType">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Input>
			
			<Label text="{i18n>lbl_content}" design="Bold" class="sapUiTinyMarginTop" required="true">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Label>
			<Input width="100%" value="{dealMemoModel>/createParams/Content}" showValueHelp="true" valueHelpRequest="onValueHelpContent">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Input>
			
			<Label text="{i18n>lbl_ContNature}" design="Bold" class="sapUiTinyMarginTop" required="true">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Label>
			<Input width="100%" value="{dealMemoModel>/createParams/ContentNature}" showValueHelp="true" valueHelpRequest="onValueHelpContentNature">
				<layoutData>
					<l:GridData span="XL12 L12 M12 S12"/>
				</layoutData>
			</Input>
			
			</l:Grid>
			<beginButton>
				<Button text="{i18n>lblOk}" press="onCreateParamOk"></Button>
			</beginButton>
			<endButton>
				<Button text="{i18n>lblCancel}" press="onCreateParamCancel"></Button>
			</endButton>
</Dialog>
</c:FragmentDefinition>